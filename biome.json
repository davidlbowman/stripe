{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSpacing": true,
			"semicolons": "asNeeded"
		}
	},
	"formatter": {
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	}
}
